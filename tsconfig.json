{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "outDir": ".build",
    "paths": {
      "example": ["example/*"],
      "src": ["src/*"]
    },
    "sourceMap": true,
    "target": "es6"
  },
  "include": ["example/**/*", "src/**/*"]
}
